{% extends "::layout.html.twig" %}

{% block acteur %}
	<ul class="nav nav-list">
		<li class="nav-header">Bonjour, {{ acteur.civAct }} {{ acteur.nomAct }}</li>		
		<li>{{ filiere.filLibelle }}</li>
		<li><a href="{{ path('projet_projet_connexion') }} class="btn btn-primary">Se déconnecter</a></li>
	</ul>
{% endblock %}
 
{% block docedit_body %}

<h1>Liste des acteurs</h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Civ</th>  
			<th>Nom</th>  
			<th>Prénom</th>
			{% for unite in unites %}
				{% if unite.getFiliere() == filiere %}
				<th>{{ unite.uniteCode }}</th>
				{% endif %}
			{% endfor %}
			<th>Moyenne Générale</th>
		</tr>
	</thead>
	<tbody>
		{% for etud in etudiants %}
		<tr>
			<td>{{ etud.getCivAct() }}</td>
			<td>{{ etud.getnomAct() }}</td>
			<td>{{ etud.getprnAct() }}</td>
			
		</tr>
		{% else %}
		<tr>
			<td style="text-align:center" colspan=3>Aucun acteur n'a été trouvé.</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
 
{% endblock %}